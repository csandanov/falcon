{
    "name": "systemseed/backend-api-bus",
    "description": "Falcon API Bus layer that make working on the frontend a breeze.",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Systemseed LLC.",
            "email": "info@systemseed.com",
            "homepage": "http://www.systemseed.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "guzzlehttp/guzzle": "~6.0",
        "userfrosting/config": "^4.0",
        "tuupola/cors-middleware": "^0.5.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "codeception/codeception": "^2.2.9",
        "stripe/stripe-php": "^4.8",
        "paypal/rest-api-sdk-php": "^1.11",
        "flow/jsonpath": "^0.3.4"
    },
    "autoload": {
        "psr-4": {
            "Routes\\": "src/Routes",
            "Middleware\\": "src/Middleware"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
